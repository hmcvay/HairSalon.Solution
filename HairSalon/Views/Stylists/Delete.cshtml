@{
  Layout = "_Layout";
}

<div class="parent">

  <div class="home-title">
    <p>Eau Claire's Salon</p>
  </div>
  
</div>

@model HairSalon.Models.Stylist

<div class="parent">
  <div class="page-content">
    <h2 class="sub-title">Are you sure you want to delete this stylist?</h2>

    @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
    <br>
    @using (Html.BeginForm())
    {
      <br>
      <input type="submit" value="Delete" />
    }
    <br>
    @Html.ActionLink("Back to stylists", "Index")
    <br>
  </div>
</div>



