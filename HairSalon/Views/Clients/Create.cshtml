@{
  Layout = "_Layout";
}
<div class="parent">

  <div class="home-title">
    <p>Eau Claire's Salon</p>
  </div>
  
</div>

@model HairSalon.Models.Client

<div class="parent">
  <div class="page-content">
    <h4 class="sub-title">Add a new Client to Stylist</h4>

    @using (Html.BeginForm())
    {
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
      <br>
      @Html.LabelFor(model => model.Stylist)
      @Html.DropDownList("StylistId")
      <br>
      <div class="link">
        <input type="submit" value="Add new client" class="btn btn-default" />
      </div>
    }
    <p class="link">@Html.ActionLink("Show all clients", "Index")</p>
  </div>
</div>