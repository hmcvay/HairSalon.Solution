@{
  Layout = "_Layout";
}
<div class="parent">

  <div class="home-title">
    <p>Eau Claire's Salon</p>
  </div>
  
</div>

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<div class="parent">
  <div class="page-content">
    <h1 class="sub-title">All Clients</h1>

    @if (@Model.Count == 0)
    {
      <h3>Your stylists have no clients â˜¹</h3>
    }

    <ul>
      @foreach(Client client in Model)
      {
        <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
      }
    </ul>

    <p>@Html.ActionLink("Add a new client", "Create")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>

  </div>
</div>



